<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="1.0.0"
               author="schegolev">
        <createTable tableName="users">
            <column name="id" type="BIGINT"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="username"
                    type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name"
                    type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name"
                    type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="birthday"
                    type="DATE">
                <constraints nullable="true"/>
            </column>
            <column name="password"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email"
                    type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created"
                    type="TIMESTAMP WITH TIME ZONE"
                    defaultValueDate="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
            <column name="updated"
                    type="TIMESTAMP WITH TIME ZONE"
                    defaultValueDate="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
            <column name="status"
                    type="VARCHAR(25)"
                    defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.1"
               author="schegolev">
        <createTable tableName="roles">
            <column name="id"
                    type="BIGINT"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="name"
                    type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="created"
                    type="TIMESTAMP WITH TIME ZONE"
                    defaultValueDate="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
            <column name="updated"
                    type="TIMESTAMP WITH TIME ZONE"
                    defaultValueDate="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
            <column name="status"
                    type="VARCHAR(25)"
                    defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.2"
               author="schegolev">
        <createTable tableName="users_roles">
            <column name="user_id"
                    type="BIGINT"/>
            <column name="role_id"
                    type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="1.0.3"
               author="schegolev">
        <addForeignKeyConstraint baseTableName="users_roles"
                                 baseColumnNames="user_id"
                                 constraintName="fk_users_roles_users"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"/>
    </changeSet>

    <changeSet id="1.0.4"
               author="schegolev">
        <addForeignKeyConstraint baseTableName="users_roles"
                                 baseColumnNames="role_id"
                                 constraintName="fk_users_roles_roles"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"/>
    </changeSet>

    <changeSet id="1.0.5"
               author="schegolev">
        <insert tableName="roles">
            <column name="name"
                    value="ROLE_USER"/>
        </insert>
        <insert tableName="roles">
            <column name="name"
                    value="ROLE_ADMIN"/>
        </insert>
    </changeSet>

    <changeSet id="1.0.6"
               author="schegolev">
        <createTable tableName="refresh_tokens">
            <column name="id"
                    type="BIGINT"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="created"
                    type="TIMESTAMP WITH TIME ZONE"
                    defaultValueDate="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
            <column name="updated"
                    type="TIMESTAMP WITH TIME ZONE"
                    defaultValueDate="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>
            <column name="status"
                    type="VARCHAR(25)"
                    defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
            <column name="refresh_token"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.7"
               author="schegolev">
        <addColumn tableName="users">
            <column name="refresh_token"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="1.0.8"
               author="schegolev">
        <addForeignKeyConstraint baseTableName="users"
                                 baseColumnNames="refresh_token"
                                 constraintName="fk_user_to_refresh_token"
                                 referencedTableName="refresh_tokens"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1.0.9" author="schegolev">
        <addForeignKeyConstraint baseTableName="refresh_tokens"
                                 baseColumnNames="user"
                                 constraintName="fk_refresh_token_to_user"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>