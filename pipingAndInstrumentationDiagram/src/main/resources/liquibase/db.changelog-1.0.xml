<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="1.0.0"
               author="schegolev">
        <createTable tableName="elements">
            <column name="id" type="BIGINT"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="element_type"
                    type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="nominal_temperature_value"
                    type="BIGINT">
            </column>
            <column name="nominal_temperature_unit"
                    type="VARCHAR(30)">
            </column>
            <column name="nominal_diameter"
                    type="VARCHAR(30)">
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.1"
               author="schegolev">
        <createTable tableName="ports">
            <column name="id" type="BIGINT"
                    autoIncrement="true">
                <constraints primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="nominal_diameter"
                    type="VARCHAR(30)">
            </column>
            <column name="nominal_pressure_value"
                    type="BIGINT">
            </column>
            <column name="nominal_pressure_unit"
                    type="VARCHAR(30)">
            </column>
            <column name="connection_type"
                    type="VARCHAR(100)">
            </column>
            <column name="flow_rate_by_mass_value"
                    type="BIGINT">
            </column>
            <column name="flow_rate_by_mass_unit"
                    type="VARCHAR(30)">
            </column>
            <column name="fact_pressure_value"
                    type="BIGINT">
            </column>
            <column name="fact_pressure_unit"
                    type="VARCHAR(30)">
            </column>
            <column name="element_id"
                    type="BIGINT">
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.2"
               author="schegolev">
        <addForeignKeyConstraint baseTableName="ports"
                                 baseColumnNames="element_id"
                                 constraintName="fk_ports_elements"
                                 referencedTableName="elements"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"/>
    </changeSet>

</databaseChangeLog>